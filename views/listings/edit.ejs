<% layout("/layouts/boilerplate.ejs") %>
<body>
  <h3>Edit A Listing</h3>
  <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
    <input name="listing[title]" , value="<%= listing.title %>" />
    <br />
    <textarea name="listing[description]"><%= listing.description %></textarea>
    <br />
    <input name="listing[image.url]" , value="<%= listing.image.url %>" />
    <br />
    <input name="listing[price]" , value="<%= listing.price %>" type="number" />
    <br />
    <input name="listing[location]" , value="<%= listing.location %>" />
    <br />
    <input name="listing[country]" , value="<%= listing.country %>" />
    <br />
    <button>Edit</button>
  </form>
</body>
